			<!--		<label for="search-1">Busqueda:</label> -->
			<input onKeyUp="buscaFichas()"  name="busqueda-fichas" id="busqueda-fichas" value="" type="search">
		</div>	
	</div>
	<div id="lista-fichas">
		<ul data-role="listview" id="ul-fichas" data-split-theme="a"  data-split-icon="calendar"  data-inset="true">
		</ul>
	</div>

	<!--   POPUP PARA DAR CITAS -->

	<div data-role="popup" id="cita" data-theme="a" data-overlay-theme="b" class="ui-content" style="max-width:340px; padding-bottom:2em;">
